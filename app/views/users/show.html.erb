<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= yield(:title) %>
      </h1>
    </section>
    <div class="span8">
	    <% if @microposts.any? %>
	      	<h3>Microposts (<%= @microposts.count %>)</h3>
	      	<ol class="microposts">
	      		<% @microposts.each do |micropost| %>
		        	<li>
					  <span class="content"><%= micropost.content %></span>
					  <span class="timestamp">
					    <b>Posted <%= time_ago_in_words(micropost.created_at) %> ago.</b>
					  </span>
					</li>
				<% end %>	
	      	</ol>
	      <%= will_paginate @microposts %>
	    <% end %>
	</div>
  </aside>
</div>