<% provide(:title, @user.name) %>
<div class="row">
    <div class="span4">
      <h1>
        <%= gravatar_for @user %>
        <%= yield(:title) %>
      </h1>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </div>
    <div class="span8">
    	<%= render 'follow_form' if signed_in? %>
	    <% if @microposts.any? %>
	      	<h3>Microposts (<%= @microposts.count %>)</h3>
	      	<ol class="microposts">
	      		<% @microposts.each do |micropost| %>
		        	<li>
					  <span class="content"><%= micropost.content %></span>
					  <span class="timestamp">
					    <b>Posted <%= time_ago_in_words(micropost.created_at) %> ago.</b>
					  </span>
					</li>
				<% end %>	
	      	</ol>
	      <%= will_paginate @microposts %>
	    <% end %>
	</div>
</div>